{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "OwnAdx Adapter Params",
  "description": "A schema which validates params accepted by the OwnAdx adapter",
  "type": "object",

  "properties": {
    "host": {
      "type": "string",
      "description": "Host"
    },
    "seatId": {
      "type": "string",
      "description": "Seat ID"
    },
    "tokenId": {
      "type": "string",
      "description": "Token ID"
    }
  },

  "oneOf": [
    { "required": ["host"] },
    { "required": ["feedId"] },
    { "required": ["token"] }
  ]
}
